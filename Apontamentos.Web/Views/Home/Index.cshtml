    ViewData["Title"] = "Apontamentos Azure";
}
<div id="divContentApontamentos">
    <div class="row">
        <fieldset class="border p-2">
            <legend class="float-none w-auto">Filtros</legend>
            <div class="row">
                <div class="col-4">
                    <h6 id="lblMes">Mês:</h6>
                    <select id="selMes" class="form-select" aria-label="Default select example">
                        <option value="01">Janeiro</option>
